---
interface Props {
  currentPage: number;
  totalPages: number;
  urlCategory?: string | null;
  searchQuery?: string | null;
}

const { currentPage, totalPages, urlCategory, searchQuery } = Astro.props;

function getPageUrl(pageNum: number) {
  const params = new URLSearchParams();
  if (urlCategory) params.set('category', urlCategory);
  if (searchQuery) params.set('search', searchQuery);
  
  const queryString = params.toString();
  const basePath = `/services/${pageNum}`;
  return queryString ? `${basePath}?${queryString}` : basePath;
}

const pages = Array.from({ length: totalPages }, (_, i) => i + 1);
---

<nav class="flex justify-center mt-8" aria-label="Pagination">
  <ul class="inline-flex items-center -space-x-px">
    {currentPage > 1 && (
      <li>
        <a
          href={getPageUrl(currentPage - 1)}
          class="block px-3 py-2 ml-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700"
        >
          <span class="sr-only">Previous</span>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        </a>
      </li>
    )}

    {pages.map(page => (
      <li>
        <a
          href={getPageUrl(page)}
          class:list={[
            'px-3 py-2 leading-tight border border-gray-300',
            page === currentPage
              ? 'text-primary-600 bg-primary-50 border-primary-300 hover:bg-primary-100'
              : 'text-gray-500 bg-white hover:bg-gray-100 hover:text-gray-700'
          ]}
          aria-current={page === currentPage ? 'page' : undefined}
        >
          {page}
        </a>
      </li>
    ))}

    {currentPage < totalPages && (
      <li>
        <a
          href={getPageUrl(currentPage + 1)}
          class="block px-3 py-2 leading-tight text-gray-500 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 hover:text-gray-700"
        >
          <span class="sr-only">Next</span>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </a>
      </li>
    )}
  </ul>
</nav>