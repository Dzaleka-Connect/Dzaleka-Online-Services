---
interface Props {
  stats: {
    total: number;
    featured: number;
    categories: number;
    organizations: number;
    closed: number;
  };
}

const { stats } = Astro.props;
---

<div class="grid grid-cols-3 sm:grid-cols-3 lg:grid-cols-5 divide-x divide-y sm:divide-y-0 divide-gray-200">
  <!-- Total Active Jobs -->
  <div class="p-3 sm:p-6">
    <div class="flex flex-col items-center text-center">
      <div class="inline-flex items-center justify-center w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-primary-100 text-primary-600 mb-2 sm:mb-3">
        <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </div>
      <dt class="text-xs sm:text-sm font-medium text-gray-500 mb-1">Active Jobs</dt>
      <dd class="text-xl sm:text-2xl font-bold text-gray-900">{stats.total}</dd>
    </div>
  </div>

  <!-- Featured Jobs -->
  <div class="p-3 sm:p-6">
    <div class="flex flex-col items-center text-center">
      <div class="inline-flex items-center justify-center w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-yellow-100 text-yellow-600 mb-2 sm:mb-3">
        <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
        </svg>
      </div>
      <dt class="text-xs sm:text-sm font-medium text-gray-500 mb-1">Featured</dt>
      <dd class="text-xl sm:text-2xl font-bold text-gray-900">{stats.featured}</dd>
    </div>
  </div>

  <!-- Categories -->
  <div class="p-3 sm:p-6">
    <div class="flex flex-col items-center text-center">
      <div class="inline-flex items-center justify-center w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-indigo-100 text-indigo-600 mb-2 sm:mb-3">
        <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>
      </div>
      <dt class="text-xs sm:text-sm font-medium text-gray-500 mb-1">Categories</dt>
      <dd class="text-xl sm:text-2xl font-bold text-gray-900">{stats.categories}</dd>
    </div>
  </div>

  <!-- Organizations -->
  <div class="p-3 sm:p-6 hidden sm:block">
    <div class="flex flex-col items-center text-center">
      <div class="inline-flex items-center justify-center w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-green-100 text-green-600 mb-2 sm:mb-3">
        <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
        </svg>
      </div>
      <dt class="text-xs sm:text-sm font-medium text-gray-500 mb-1">Organizations</dt>
      <dd class="text-xl sm:text-2xl font-bold text-gray-900">{stats.organizations}</dd>
    </div>
  </div>

  <!-- Closed Jobs -->
  <div class="p-3 sm:p-6 hidden sm:block">
    <div class="flex flex-col items-center text-center">
      <div class="inline-flex items-center justify-center w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-red-100 text-red-600 mb-2 sm:mb-3">
        <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m0 0v2m0-2h2m-2 0H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <dt class="text-xs sm:text-sm font-medium text-red-600 mb-1">Closed</dt>
      <dd class="text-xl sm:text-2xl font-bold text-gray-900">{stats.closed}</dd>
    </div>
  </div>
</div>
