---
const { content } = Astro.props;
const { Content } = await content.render();
---

<main class="lg:col-span-9">
  <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-8">
    <article class="prose prose-blue max-w-none">
      <h1>{content.data.title}</h1>
      <Content />
    </article>
  </div>
</main>

<style>
  /* Custom styles for documentation content */
  :global(.prose h1) {
    @apply text-4xl font-bold text-gray-900 mb-8;
  }
  :global(.prose h2) {
    @apply text-2xl font-semibold text-gray-900 mt-12 mb-6 flex items-center gap-3;
  }
  :global(.prose h2 svg) {
    @apply w-6 h-6 text-primary-600;
  }
  :global(.prose h3) {
    @apply text-xl font-medium text-gray-900 mt-8 mb-4 flex items-center gap-2;
  }
  :global(.prose h3 svg) {
    @apply w-5 h-5 text-primary-500;
  }
  :global(.prose p) {
    @apply text-gray-600 mb-6;
  }
  :global(.prose ul) {
    @apply list-none space-y-3 mb-6;
  }
  :global(.prose ul li) {
    @apply flex items-start gap-3;
  }
  :global(.prose ul li svg) {
    @apply w-5 h-5 text-primary-500 mt-0.5 flex-shrink-0;
  }
  :global(.prose a) {
    @apply text-primary-600 hover:text-primary-700;
  }
  :global(.prose strong) {
    @apply font-semibold text-gray-900;
  }
  :global(.prose blockquote) {
    @apply border-l-4 border-primary-200 pl-4 italic text-gray-600;
  }
  :global(.prose code) {
    @apply bg-gray-100 px-1 py-0.5 rounded text-sm text-gray-800;
  }
  :global(.feature-grid) {
    @apply grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 my-8;
  }
  :global(.feature-card) {
    @apply bg-white p-6 rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition-shadow;
  }
  :global(.feature-card svg) {
    @apply w-8 h-8 text-primary-600 mb-4;
  }
  :global(.feature-card h4) {
    @apply text-lg font-semibold text-gray-900 mb-2;
  }
  :global(.feature-card p) {
    @apply text-gray-600 text-sm;
  }
  :global(.steps-list) {
    @apply space-y-6 my-8;
  }
  :global(.step-item) {
    @apply flex items-start gap-4;
  }
  :global(.step-number) {
    @apply flex-shrink-0 w-8 h-8 rounded-full bg-primary-100 text-primary-600 font-semibold flex items-center justify-center;
  }
  :global(.step-content) {
    @apply flex-grow;
  }
  :global(.step-content h4) {
    @apply text-lg font-semibold text-gray-900 mb-2;
  }
  :global(.step-content p) {
    @apply text-gray-600;
  }
</style>
