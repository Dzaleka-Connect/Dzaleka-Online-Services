---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<div class="text-center max-w-3xl mx-auto mb-16">
  <h1 class="text-4xl font-bold text-gray-900 sm:text-5xl mb-6">
    {title}
  </h1>
  {description && (
    <p class="text-xl text-gray-600 leading-relaxed">
      {description}
    </p>
  )}
</div>
