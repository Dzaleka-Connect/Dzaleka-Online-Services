---
interface Props {
  service: {
    email?: string;
    phone?: string;
    website?: string;
    address: string;
  };
}

const { service } = Astro.props;
---

<div class="space-y-4">
  <h2 class="text-xl font-semibold text-gray-900">Contact Information</h2>
  <div class="grid gap-4 sm:grid-cols-2">
    {service.email && (
      <a href={`mailto:${service.email}`} 
         class="flex items-center p-4 bg-white rounded-xl hover:shadow-md transition-shadow group">
        <span class="bg-primary-50 p-3 rounded-lg text-primary-600 group-hover:scale-110 transition-transform">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
          </svg>
        </span>
        <div class="ml-4">
          <div class="text-sm font-medium text-gray-500">Email</div>
          <div class="text-gray-900">{service.email}</div>
        </div>
      </a>
    )}

    {service.phone && (
      <a href={`tel:${service.phone}`} 
         class="flex items-center p-4 bg-white rounded-xl hover:shadow-md transition-shadow group">
        <span class="bg-primary-50 p-3 rounded-lg text-primary-600 group-hover:scale-110 transition-transform">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
          </svg>
        </span>
        <div class="ml-4">
          <div class="text-sm font-medium text-gray-500">Phone</div>
          <div class="text-gray-900">{service.phone}</div>
        </div>
      </a>
    )}

    {service.website && (
      <a href={service.website}
         target="_blank"
         rel="noopener noreferrer"
         class="flex items-center p-4 bg-white rounded-xl hover:shadow-md transition-shadow group">
        <span class="bg-primary-50 p-3 rounded-lg text-primary-600 group-hover:scale-110 transition-transform">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
            <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
            <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
          </svg>
        </span>
        <div class="ml-4">
          <div class="text-sm font-medium text-gray-500">Website</div>
          <div class="text-gray-900">Visit Website</div>
        </div>
      </a>
    )}

    <div class="flex items-center p-4 bg-white rounded-xl sm:col-span-2">
      <span class="bg-primary-50 p-3 rounded-lg text-primary-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
        </svg>
      </span>
      <div class="ml-4">
        <div class="text-sm font-medium text-gray-500">Address</div>
        <div class="text-gray-900">{service.address}</div>
      </div>
    </div>
  </div>
</div>