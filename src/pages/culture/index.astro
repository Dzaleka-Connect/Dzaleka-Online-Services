---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import PageHeader from '../../components/ui/PageHeader.astro';

// Get cultural organizations
const services = await getCollection('services');
const culturalOrgs = services.filter(service => 
  ['Tumaini Festival', 'Dzaleka Art Project', 'Dzaleka Arts Lab', 'Inside Dzaleka', 'Salama Africa'].includes(service.data.title)
);

// Featured events or programs
const featuredPrograms = [
  {
    title: 'Tumaini Festival',
    description: 'Annual multicultural festival celebrating arts, music, and dance from various refugee communities',
    image: '/images/tumaini-festival.jpg',
    link: '/services/tumaini-festival'
  },
  {
    title: 'Art Exhibitions',
    description: 'Regular exhibitions showcasing artwork from talented camp artists',
    image: '/images/art-exhibitions.jpg',
    link: '/services/dzaleka-art-project'
  },
  {
    title: 'Cultural Performances',
    description: 'Traditional dance, music, and theatrical performances representing diverse cultures',
    image: '/images/cultural-performances.jpg',
    link: '/services/salama-africa'
  }
];
---

<MainLayout title="Cultural Hub - Dzaleka Heritage">
  <main>
    <!-- Hero Section -->
    <div class="relative overflow-hidden">
      <div class="absolute inset-0">
        <img 
          src="/images/dzaleka-hero.jpeg" 
          alt="Cultural activities in Dzaleka" 
          class="w-full h-full object-cover object-center"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-primary-900/95 via-primary-900/80 to-primary-800/70"></div>
      </div>
      <div class="relative min-h-[50vh] flex items-center">
        <div class="container mx-auto px-6 py-12">
          <div class="max-w-3xl mx-auto text-center">
            <h1 class="text-4xl lg:text-5xl font-bold text-white mb-6 leading-tight">
              Cultural Excellence in Dzaleka
            </h1>
            <p class="text-lg text-white/90 leading-relaxed mb-8 mx-auto max-w-2xl">
              Discover the vibrant cultural organizations that make Dzaleka Refugee Camp 
              a beacon of artistic expression and cultural preservation in Malawi.
            </p>
            <div class="flex justify-center">
              <a 
                href="#organizations" 
                class="inline-flex items-center px-6 py-3 bg-white text-primary-600 rounded-lg hover:bg-primary-50 transition-all duration-300 font-medium"
              >
                Explore Organizations
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M16.707 10.293a1 1 0 010 1.414l-6 6a1 1 0 01-1.414 0l-6-6a1 1 0 111.414-1.414L9 14.586V3a1 1 0 012 0v11.586l4.293-4.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Cultural Impact -->
    <section class="py-24 bg-white">
      <div class="container mx-auto px-6">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-600 rounded-full text-sm font-medium mb-4">
            Impact Showcase
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            Celebrating Cultural Excellence in Dzaleka
          </h2>
          <p class="text-lg text-gray-600">
            Discover the remarkable achievements of cultural organizations that are transforming lives in Dzaleka Refugee Camp
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
          <!-- Cultural Exchange -->
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 relative overflow-hidden group border border-gray-100">
            <div class="absolute inset-0 bg-gradient-to-br from-primary-500/5 to-primary-500/0 group-hover:scale-95 transition-transform duration-300"></div>
            <div class="relative">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Cultural Exchange</h3>
              <p class="text-gray-600 mb-6">
                Through the renowned <a href="https://tumaini-festival.dzaleka.com" class="text-primary-600 hover:text-primary-700 font-medium">Tumaini Festival</a>, founded in 2014, artists from across Africa and the world share stages with performers from Dzaleka, fostering cross-cultural understanding.
              </p>
              <div class="flex items-center text-primary-600 font-medium">
                <span class="text-3xl font-bold mr-2">24K+</span>
                <span>Festival Attendees</span>
              </div>
              <div class="mt-4 text-sm text-gray-500">
                <a href="https://blogs.worldbank.org/nasikiliza/breaking-mold-refugees-founding-tumaini-festival-dzaleka-refugee-camp-malawi" class="hover:text-primary-600 transition-colors">
                  Source: World Bank Nasikiliza Report
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Cultural Enterprise - Kibebe -->
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 relative overflow-hidden group border border-gray-100">
            <div class="absolute inset-0 bg-gradient-to-br from-primary-500/5 to-primary-500/0 group-hover:scale-95 transition-transform duration-300"></div>
            <div class="relative">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Cultural Enterprise</h3>
              <p class="text-gray-600 mb-6">
                Through initiatives like <a href="https://kibebe.com" class="text-primary-600 hover:text-primary-700 font-medium">Kibebe</a>, refugee artisans are transforming traditional crafts into sustainable livelihoods while preserving cultural heritage.
              </p>
              <div class="flex items-center text-primary-600 font-medium">
                <span class="text-3xl font-bold mr-2">100+</span>
                <span>Artisans Empowered</span>
              </div>
              <div class="mt-4 text-sm text-gray-500">
                <a href="https://seed.uno/enterprise-profiles/kibebe" class="hover:text-primary-600 transition-colors">
                  Source: SEED Enterprise Profile
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Economic Impact -->
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 relative overflow-hidden group border border-gray-100">
            <div class="absolute inset-0 bg-gradient-to-br from-primary-500/5 to-primary-500/0 group-hover:scale-95 transition-transform duration-300"></div>
            <div class="relative">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Arts & Performance</h3>
              <p class="text-gray-600 mb-6">
                The <a href="https://dzalekaartproject.com" class="text-primary-600 hover:text-primary-700 font-medium">Dzaleka Art Project</a> documents and promotes refugee artists, showcasing diverse talents through visual art, music, dance, and theater.
              </p>
              <div class="flex items-center text-primary-600 font-medium">
                <span class="text-3xl font-bold mr-2">150+</span>
                <span>Artists Documented</span>
              </div>
              <div class="mt-4 text-sm text-gray-500">
                <a href="https://dzalekaartproject.com/about" class="hover:text-primary-600 transition-colors">
                  Source: Dzaleka Art Project
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Community Building -->
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 relative overflow-hidden group border border-gray-100">
            <div class="absolute inset-0 bg-gradient-to-br from-primary-500/5 to-primary-500/0 group-hover:scale-95 transition-transform duration-300"></div>
            <div class="relative">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Community Impact</h3>
              <p class="text-gray-600 mb-6">
                Cultural initiatives in Dzaleka span youth empowerment, mental health support, peace building, and arts activities, creating lasting positive change in the community.
              </p>
              <div class="flex items-center text-primary-600 font-medium">
                <span class="text-3xl font-bold mr-2">153+</span>
                <span>Performance Acts</span>
              </div>
              <div class="mt-4 text-sm text-gray-500">
                <a href="https://www.wilsoncenter.org/article/refugee-creativity-fun-and-initiative-dzaleka-refugee-camp-malawi" class="hover:text-primary-600 transition-colors">
                  Source: Wilson Center Report
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-12 text-center text-sm text-gray-500">
          <p>
            Data compiled from verified sources including the World Bank, Wilson Center, and official project documentation. Last verified: January 2024.
          </p>
          <div class="flex justify-center gap-4 mt-2">
            <a href="https://blogs.worldbank.org/nasikiliza/breaking-mold-refugees-founding-tumaini-festival-dzaleka-refugee-camp-malawi" class="text-primary-600 hover:text-primary-700">
              World Bank Report
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
            <a href="https://www.wilsoncenter.org/article/refugee-creativity-fun-and-initiative-dzaleka-refugee-camp-malawi" class="text-primary-600 hover:text-primary-700">
              Wilson Center Report
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
            <a href="https://seed.uno/enterprise-profiles/kibebe" class="text-primary-600 hover:text-primary-700">
              SEED Enterprise Profile
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Organizations -->
    <section id="organizations" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <span class="text-primary-600 font-semibold text-sm uppercase tracking-wider">Featured Organizations</span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-4">Cultural Leaders in Dzaleka</h2>
          <p class="text-xl text-gray-600 mt-4">
            Meet the organizations shaping Dzaleka's vibrant cultural landscape
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Tumaini Festival -->
          <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden">
            <div class="relative h-48 overflow-hidden">
              <img
                src="https://tumainiletu.org/wp-content/uploads/2024/10/Badre_Bahaji_Tumaini_festival21_-31-1.jpg"
                alt="Tumaini Festival performance"
                class="w-full h-full object-cover transform hover:scale-110 transition-transform duration-500"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-2">Tumaini Festival</h3>
              <p class="text-gray-600 mb-4">
                Malawi's premier refugee-led arts and cultural festival, celebrating diversity through music, dance, and poetry.
              </p>
              <a
                href="https://tumaini-festival.dzaleka.com"
                class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
              >
                Learn more
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>

          <!-- Dzaleka Arts Lab -->
          <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden">
            <div class="relative h-48 overflow-hidden">
              <img
                src="https://freight.cargo.site/w/2500/h/1562/q/75/i/H2041496616323746227278298378001/lead-image.png"
                alt="Dzaleka Arts Lab creative space"
                class="w-full h-full object-cover transform hover:scale-110 transition-transform duration-500"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-2">Dzaleka Arts Lab</h3>
              <p class="text-gray-600 mb-4">
                A creative community creating physical and digital artworks, connecting refugee stories with the world through art and music.
              </p>
              <a
                href="https://dzalekaartslab.org"
                class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
              >
                Learn more
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>

          <!-- Kibebe -->
          <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden">
            <div class="relative h-48 overflow-hidden">
              <img
                src="https://kibebe.com/cdn/shop/files/Team_adjusted_600x600.png?v=1613718687"
                alt="Kibebe artisans at work"
                class="w-full h-full object-cover transform hover:scale-110 transition-transform duration-500"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-2">Kibebe</h3>
              <p class="text-gray-600 mb-4">
                Empowering refugee artisans through traditional crafts and contemporary design, creating sustainable livelihoods through art.
              </p>
              <a
                href="/services/kibebe"
                class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
              >
                Learn more
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>

          <!-- Dzaleka Art Project -->
          <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden">
            <div class="relative h-48 overflow-hidden">
              <img
                src="https://dzalekaartproject.com/images/visual%20arts%20images/Art1080x1080.jpg"
                alt="Dzaleka Art Project exhibition"
                class="w-full h-full object-cover transform hover:scale-110 transition-transform duration-500"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-2">Dzaleka Art Project</h3>
              <p class="text-gray-600 mb-4">
                A community-based initiative documenting and promoting the diverse artistic talents within the refugee camp.
              </p>
              <a
                href="https://dzalekaartproject.com"
                class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
              >
                Learn more
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="relative py-20 overflow-hidden bg-primary-900">
      <div class="absolute inset-0">
        <img 
          src="/images/pattern-bg.jpg" 
          alt="Background pattern" 
          class="w-full h-full object-cover opacity-10"
        />
        <div class="absolute inset-0 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700"></div>
      </div>
      <div class="relative container mx-auto px-6">
        <div class="max-w-4xl mx-auto text-center">
          <span class="inline-block px-4 py-2 bg-primary-800/50 text-white/90 rounded-full text-sm font-medium mb-4 backdrop-blur-sm border border-white/10">
            Join Our Community
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
            Discover More Cultural Initiatives
          </h2>
          <p class="text-lg text-white/80 mb-10 max-w-2xl mx-auto">
            Be part of Dzaleka's vibrant cultural scene. Explore upcoming events and connect with organizations making a difference.
          </p><br>
          <div class="flex flex-wrap justify-center gap-4">
            <a 
              href="/events" 
              class="inline-flex items-center px-6 py-3 bg-white text-primary-900 rounded-lg hover:bg-primary-50 transition-all duration-300 font-medium group"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 group-hover:scale-110 transition-transform" viewBox="0 0 20 20" fill="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
              </svg>
              View Events
            </a>
            <a 
              href="/services" 
              class="inline-flex items-center px-6 py-3 bg-primary-800/40 text-white rounded-lg hover:bg-primary-800/60 transition-all duration-300 font-medium backdrop-blur-sm border border-white/10 group"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 group-hover:scale-110 transition-transform" viewBox="0 0 20 20" fill="currentColor">
                <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 00-2 2v2a2 2 0 002 2h12a2 2 0 002-2v-2a2 2 0 00-2-2H4z" />
              </svg>
              Browse Organizations
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</MainLayout>
