---
import MainLayout from '../../layouts/MainLayout.astro';
---

<MainLayout title="Job Submitted">
  <div class="min-h-screen bg-gradient-to-b from-gray-50 via-white to-gray-50">
    <div class="max-w-3xl mx-auto px-4 py-16 sm:px-6">
      <div class="text-center">
        <!-- Success Icon -->
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
          <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>

        <!-- Message -->
        <h1 class="mt-6 text-3xl font-bold text-gray-900">Job Submitted Successfully!</h1>
        <p class="mt-4 text-lg text-gray-600">
          Thank you for posting a job opportunity. Our team will review your submission and publish it soon.
        </p>

        <!-- Next Steps -->
        <div class="mt-12">
          <h2 class="text-lg font-medium text-gray-900">Next Steps</h2>
          <div class="mt-6 grid gap-6 grid-cols-1 md:grid-cols-2">
            <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200/50">
              <div class="text-center">
                <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
                <h3 class="mt-4 text-base font-medium text-gray-900">Review Process</h3>
                <p class="mt-2 text-sm text-gray-500">
                  We'll review your submission within 24-48 hours and notify you once it's published.
                </p>
              </div>
            </div>

            <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200/50">
              <div class="text-center">
                <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                <h3 class="mt-4 text-base font-medium text-gray-900">Post Another Job</h3>
                <p class="mt-2 text-sm text-gray-500">
                  Have more opportunities to share? Feel free to post another job listing.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-12 space-x-4">
          <a
            href="/jobs"
            class="inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
          >
            View Job Board
          </a>
          <a
            href="/jobs/post"
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700"
          >
            Post Another Job
          </a>
        </div>

        <!-- Support Info -->
        <p class="mt-12 text-sm text-gray-500">
          Need help? Contact us at{' '}
          <a href="mailto:support@dzalekaconnect.org" class="text-primary-600 hover:text-primary-500">
            support@dzalekaconnect.org
          </a>
        </p>
      </div>
    </div>
  </div>
</MainLayout>
