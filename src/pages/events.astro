---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { format } from 'date-fns';
import Badge from '../components/ui/Badge.astro';

const events = await getCollection('events');
const upcomingEvents = events
  .filter(event => event.data.status === 'upcoming')
  .sort((a, b) => a.data.date.getTime() - b.data.date.getTime());

const pastEvents = events
  .filter(event => event.data.status === 'past')
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Cultural Events">
  <main class="container mx-auto px-4 py-8">
    <!-- Hero Section -->
    <div class="relative bg-gradient-to-br from-primary-600 to-primary-800 rounded-2xl overflow-hidden mb-12">
      <div class="absolute inset-0 bg-black/20"></div>
      <div class="relative px-6 py-12 md:py-16 text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Cultural Events at Dzaleka
        </h1>
        <p class="text-lg md:text-xl text-white/90 max-w-2xl mx-auto">
          Discover and participate in events that celebrate our diverse community and cultural heritage.
        </p>
      </div>
    </div>

    <!-- Upcoming Events -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Upcoming Events</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {upcomingEvents.map(event => (
          <article class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-lg transition-all duration-300">
            <div class="aspect-w-16 aspect-h-9">
              <img 
                src={event.data.image} 
                alt={event.data.title}
                class="w-full h-full object-cover"
              />
              <div class="absolute bottom-4 right-4">
                <Badge variant="blue">{event.data.category}</Badge>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center justify-between mb-4">
                <time datetime={event.data.date.toISOString()} class="text-primary-600 font-medium">
                  {format(event.data.date, 'MMMM d, yyyy')}
                </time>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">{event.data.title}</h3>
              <p class="text-gray-600 mb-4">{event.data.description}</p>
              
              <div class="flex items-center text-gray-500 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                </svg>
                {event.data.location}
              </div>

              <div class="flex items-center justify-between">
                <div class="text-sm">
                  <p class="font-medium text-gray-900">
                    Photos by {event.data.photographer.name}
                  </p>
                  {event.data.photographer.instagram && (
                    <a 
                      href={`https://instagram.com/${event.data.photographer.instagram}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-primary-600 hover:text-primary-700"
                    >
                      @{event.data.photographer.instagram}
                    </a>
                  )}
                </div>
                {event.data.registrationLink && (
                  <a
                    href={event.data.registrationLink}
                    class="inline-flex items-center px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors"
                  >
                    Register Now
                  </a>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Past Events -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Past Events</h2>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {pastEvents.map(event => (
          <article class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-lg transition-all duration-300">
            <div class="aspect-w-16 aspect-h-9">
              <img 
                src={event.data.image} 
                alt={event.data.title}
                class="w-full h-full object-cover"
              />
              <div class="absolute bottom-4 right-4">
                <Badge variant="green">{event.data.category}</Badge>
              </div>
            </div>
            <div class="p-4">
              <div class="flex items-center justify-between mb-2">
                <time datetime={event.data.date.toISOString()} class="text-sm text-gray-500">
                  {format(event.data.date, 'MMM d, yyyy')}
                </time>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">{event.data.title}</h3>
              <p class="text-gray-600 text-sm mb-4">{event.data.description}</p>
              
              <div class="flex items-center justify-between">
                <div class="text-sm">
                  <span class="text-gray-500">Photos by </span>
                  {event.data.photographer.instagram ? (
                    <a 
                      href={`https://instagram.com/${event.data.photographer.instagram}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-primary-600 hover:text-primary-700"
                    >
                      @{event.data.photographer.instagram}
                    </a>
                  ) : (
                    <span class="text-gray-900">{event.data.photographer.name}</span>
                  )}
                </div>
                {event.data.gallery && (
                  <a
                    href={event.data.gallery}
                    class="inline-flex items-center text-primary-600 hover:text-primary-700"
                  >
                    View Gallery
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>
  </main>
</Layout>