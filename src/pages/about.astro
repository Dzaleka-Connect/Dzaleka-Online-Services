const serviceList = [
  {
    category: 'Internal Support Services',
    items: [
      'Legal Support & Advocacy',
      'Emergency Relief Assistance',
      'Leadership Support Programs',
      'Advocacy Campaign Support',
      'Rights Awareness & Education',
