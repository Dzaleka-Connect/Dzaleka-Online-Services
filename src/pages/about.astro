  {
    name: 'UNHCR',
    description: 'United Nations High Commissioner for Refugees',
    icon: 'üåê'
  },
  {
    name: 'Community Organizations',
    description: 'Local organizations supporting refugee communities',
    icon: 'ü§ù'
  }
];

const services = [
  {
    title: 'Application Services',
    description: 'Submit and track applications for various community services and programs.',
    icon: 'üìù'
  },
  {
    title: 'Digital Archive',
    description: 'Access and contribute to our growing collection of community stories and history.',
    icon: 'üìö'
  },
  {
    title: 'Resource Center',
    description: 'Find helpful information, guides, and educational materials.',
    icon: 'üìã'
  }
];

const goals = [
  {
    title: 'Digital Inclusion',
    description: 'Making services accessible to all community members through digital platforms.'
  },
  {
    title: 'Community Empowerment',
    description: 'Providing tools and resources for self-sufficiency and growth.'
  },
  {
    title: 'Cultural Preservation',
    description: 'Documenting and preserving our rich cultural heritage for future generations.'
  },
  {
    title: 'Service Integration',
    description: 'Streamlining access to essential services and support programs.'
  }
