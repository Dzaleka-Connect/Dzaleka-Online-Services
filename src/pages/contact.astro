---
import MainLayout from '../layouts/MainLayout.astro';
import ContactForm from '../components/ContactForm.astro';

const contactInfo = {
  email: 'dzalekaconnect@gmail.com',
  phone: '+265 999 123 456',
  address: 'Dzaleka Refugee Camp, Dowa District, Malawi',
  socialMedia: [
    { name: 'Facebook', url: 'https://facebook.com/dzaleka_services', icon: 'facebook' },
    { name: 'Twitter', url: 'https://twitter.com/dzaleka_services', icon: 'twitter' },
    { name: 'Instagram', url: 'https://instagram.com/dzaleka_services', icon: 'instagram' }
  ]
};
---

<MainLayout title="Contact Us">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-5xl mx-auto">
      <!-- Contact Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Contact Us</h1>
        <p class="text-xl text-gray-600">
          Get in touch with us for any questions or support needs
        </p>
      </div>

      <div class="grid gap-8 md:grid-cols-2">
        <!-- Contact Information -->
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Get in Touch</h2>
          
          <div class="space-y-4">
            <div class="flex items-center">
              <div class="w-10 h-10 bg-primary-50 rounded-lg flex items-center justify-center text-primary-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm text-gray-500">Email</p>
                <a href={`mailto:${contactInfo.email}`} class="text-gray-900 hover:text-primary-600">
                  {contactInfo.email}
                </a>
              </div>
            </div>

            <div class="flex items-center">
              <div class="w-10 h-10 bg-primary-50 rounded-lg flex items-center justify-center text-primary-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm text-gray-500">Phone</p>
                <a href={` tel:${contactInfo.phone}`} class="text-gray-900 hover:text-primary-600">
                  {contactInfo.phone}
                </a>
              </div>
            </div>

            <div class="flex items-center">
              <div class="w-10 h-10 bg-primary-50 rounded-lg flex items-center justify-center text-primary-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-sm text-gray-500">Address</p>
                <p class="text-gray-900">{contactInfo.address}</p>
              </div>
            </div>
          </div>

          <!-- Social Media -->
          <div class="mt-8">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Follow Us</h3>
            <div class="flex space-x-4">
              {contactInfo.socialMedia.map(social => (
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center text-gray-600 hover:bg-primary-50 hover:text-primary-600 transition-colors"
                >
                  <span class="sr-only">{social.name}</span>
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    {social.icon === 'facebook' && (
                      <path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z" />
                    )}
                    {social.icon === 'twitter' && (
                      <path d="M23.954 4.569c-.885.389-1.83.654-2.825.775 1.014-.611 1.794-1.574 2.163-2.723-.951.555-2.005.959-3.127 1.184-.896-.959-2.173-1.559-3.591-1.559-2.717 0-4.92 2.203-4.92 4.917 0 .39.045.765.127 1.124C7.691 8.094 4.066 6.13 1.64 3.161c-.427.722-.666 1.561-.666 2.475 0 1.71.87 3.213 2.188 4.096-.807-.026-1.566-.248-2.228-.616v.061c0 2.385 1.693 4.374 3.946 4.827-.413.111-.849.171-1.296.171-.314 0-.615-.03-.916-.086.631 1.953 2.445 3.377 4.604 3.417-1.68 1.319-3.809 2.105-6.102 2.105-.39 0-.779-.023-1.17-.067 2.189 1.394 4.768 2.209 7.557 2.209 9.054 0 13.999-7.496 13.999-13.986 0-.209 0-.42-.015-.63.961-.689 1.8-1.56 2.46-2.548l-.047-.02z" />
                    )}
                    {social.icon === 'instagram' && (
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                    )}
                  </svg>
                </a>
              ))}
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Send us a Message</h2>
          <ContactForm />
        </div>
      </div>

      <!-- Map -->
      <div class="mt-12">
        <div class="bg-white rounded-xl shadow-sm p-4 h-[400px]">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15611.787098550936!2d33.91984!3d-13.7047!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1921d2a9b6121dc7%3A0x3e1c96c85c848919!2sDzaleka%20Refugee%20Camp!5e0!3m2!1sen!2s!4v1645000000000!5m2!1sen!2s"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
          ></iframe>
        </div>
      </div>
    </div>
  </main>
</MainLayout>