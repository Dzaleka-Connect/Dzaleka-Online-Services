---
import MainLayout from '../../../layouts/MainLayout.astro';
import FormStatus from '../../../components/applications/FormStatus.astro';

const formId = 'emergency-relief-form';
---

<MainLayout title="Emergency Relief Application">
  <div class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl mx-auto">
        <div class="mb-6">
          <a 
            href="/applications" 
            class="inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Back to Applications
          </a>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-8">
          <header class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-4">Emergency Relief Application</h1>
            <p class="text-gray-600">
              Request emergency assistance for immediate needs. We prioritize cases based on urgency and available resources.
            </p>
          </header>

          <FormStatus formId={formId} />

          <form
            id={formId}
            action="https://formspree.io/f/xqaaajae"
            method="POST"
            class="space-y-6"
            enctype="multipart/form-data"
            data-netlify-recaptcha="true"
          >
            {/* Hidden Honeypot Field */}
            <input type="text" name="_gotcha" style="display:none" />

            {/* Form Subject */}
            <input 
              type="hidden" 
              name="_subject" 
              value="New Emergency Relief Request" 
            />

            {/* Personal Information */}
            <div class="space-y-6">
              <h2 class="text-xl font-semibold text-gray-900">Personal Information</h2>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-gray-700">First Name</label>
                  <input
                    type="text"
                    name="firstName"
                    id="firstName"
                    required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  />
                </div>
                
                <div>
                  <label for="lastName" class="block text-sm font-medium text-gray-700">Last Name</label>
                  <input
                    type="text"
                    name="lastName"
                    id="lastName"
                    required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  />
                </div>
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700">Phone Number (for urgent contact)</label>
                <input
                  type="tel"
                  name="phone"
                  id="phone"
                  required
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                />
              </div>

              <div>
                <label for="location" class="block text-sm font-medium text-gray-700">Current Location</label>
                <input
                  type="text"
                  name="location"
                  id="location"
                  required
                  placeholder="e.g., Block/Section number, Dzaleka Refugee Camp"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                />
              </div>

              <div>
                <label for="familySize" class="block text-sm font-medium text-gray-700">Number of Family Members</label>
                <input
                  type="number"
                  name="familySize"
                  id="familySize"
                  min="1"
                  required
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                />
              </div>
            </div>

            {/* Emergency Details */}
            <div class="space-y-6 pt-6 border-t">
              <h2 class="text-xl font-semibold text-gray-900">Emergency Details</h2>
              
              <div>
                <label for="assistanceType" class="block text-sm font-medium text-gray-700">Type of Assistance Needed</label>
                <select
                  name="assistanceType"
                  id="assistanceType"
                  required
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                >
                  <option value="">Select type of assistance</option>
                  <option value="food">Food Assistance</option>
                  <option value="shelter">Emergency Shelter</option>
                  <option value="medical">Medical Support</option>
                  <option value="necessities">Basic Necessities</option>
                  <option value="other">Other (please specify)</option>
                </select>
              </div>

              <div>
                <label for="situation" class="block text-sm font-medium text-gray-700">Emergency Situation</label>
                <textarea
                  name="situation"
                  id="situation"
                  rows="4"
                  required
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  placeholder="Please describe your emergency situation and immediate needs..."
                ></textarea>
              </div>

              <div>
                <label for="urgency" class="block text-sm font-medium text-gray-700">Urgency Level</label>
                <select
                  name="urgency"
                  id="urgency"
                  required
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                >
                  <option value="">Select urgency level</option>
                  <option value="immediate">Immediate - Need help within 24 hours</option>
                  <option value="urgent">Urgent - Need help within 2-3 days</option>
                  <option value="soon">Soon - Need help within a week</option>
                </select>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700">Current Support</label>
                <div class="mt-2 space-y-2">
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input
                        type="checkbox"
                        name="currentSupport"
                        value="unhcr"
                        class="h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-500"
                      />
                    </div>
                    <div class="ml-3 text-sm">
                      <label class="text-gray-700">Receiving support from UNHCR</label>
                    </div>
                  </div>
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input
                        type="checkbox"
                        name="currentSupport"
                        value="ngo"
                        class="h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-500"
                      />
                    </div>
                    <div class="ml-3 text-sm">
                      <label class="text-gray-700">Receiving support from other NGOs</label>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            {/* Photo Evidence Section */}
            <div class="space-y-6 pt-6 border-t">
              <h2 class="text-xl font-semibold text-gray-900">Supporting Evidence</h2>
              
              <div>
                <label for="photos" class="block text-sm font-medium text-gray-700">
                  Upload Photos (Optional)
                </label>
                <p class="text-sm text-gray-500 mb-2">
                  You can upload photos to document your situation. Maximum file size: 10MB per file
                </p>
                <input
                  type="file"
                  name="photos"
                  id="photos"
                  multiple
                  accept="image/*"
                  class="mt-1 block w-full text-sm text-gray-500
                    file:mr-4 file:py-2 file:px-4
                    file:rounded-md file:border-0
                    file:text-sm file:font-medium
                    file:bg-primary-50 file:text-primary-700
                    hover:file:bg-primary-100"
                />
              </div>
            </div>

            {/* Consent */}
            <div class="space-y-6 pt-6 border-t">
              <h2 class="text-xl font-semibold text-gray-900">Consent</h2>
              
              <div class="space-y-4">
                <div class="flex items-start">
                  <div class="flex items-center h-5">
                    <input
                      type="checkbox"
                      name="consent"
                      id="consent"
                      required
                      class="h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-500"
                    />
                  </div>
                  <div class="ml-3 text-sm">
                    <label for="consent" class="font-medium text-gray-700">Information Consent</label>
                    <p class="text-gray-500">I confirm that the information provided is accurate and consent to its use for processing my emergency assistance request.</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="pt-6">
              {/* reCAPTCHA */}
              <div class="mb-6" data-netlify-recaptcha="true"></div>
              
              <button
                type="submit"
                class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
              >
                Submit Emergency Request
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
