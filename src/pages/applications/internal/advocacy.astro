---
import MainLayout from '../../../layouts/MainLayout.astro';
import FormStatus from '../../../components/applications/FormStatus.astro';

const formId = 'advocacy-campaign-form';
---

<MainLayout title="Advocacy Campaign Application">
  <div class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl mx-auto">
        <div class="mb-6">
          <a 
            href="/applications" 
            class="inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Back to Applications
          </a>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-8">
          <header class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-4">Advocacy Campaign Request</h1>
            <p class="text-gray-600">
              Submit a request for advocacy support or propose a campaign for refugee rights and policy change.
            </p>
          </header>

          <FormStatus formId={formId} />

          <form
            id={formId}
            action="https://formspree.io/f/xqaaajae"
            method="POST"
            class="space-y-6"
            enctype="multipart/form-data"
            data-netlify-recaptcha="true"
          >
            {/* Hidden Honeypot Field */}
            <input type="text" name="_gotcha" style="display:none" />

            {/* Form Subject */}
            <input 
              type="hidden" 
              name="_subject" 
              value="New Advocacy Campaign Request" 
            />

            {/* Contact Information */}
            <div class="space-y-6">
              <h2 class="text-xl font-semibold text-gray-900">Contact Information</h2>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-gray-700">First Name</label>
                  <input
                    type="text"
                    name="firstName"
                    id="firstName"
                    required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  />
                </div>
                
                <div>
                  <label for="lastName" class="block text-sm font-medium text-gray-700">Last Name</label>
                  <input
                    type="text"
                    name="lastName"
                    id="lastName"
                    required
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  />
                </div>
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
                <input
                  type="email"
                  name="email"
                  id="email"
                  required
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                />
              </div>

              <div>
                <label for="organization" class="block text-sm font-medium text-gray-700">Organization/Group (if any)</label>
                <input
                  type="text"
                  name="organization"
                  id="organization"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                />
              </div>
            </div>

            {/* Campaign Information */}
            <div class="space-y-6 pt-6 border-t">
              <h2 class="text-xl font-semibold text-gray-900">Campaign Information</h2>
              
              <div>
                <label for="campaignType" class="block text-sm font-medium text-gray-700">Type of Advocacy</label>
                <select
                  name="campaignType"
                  id="campaignType"
                  required
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                >
                  <option value="">Select type of advocacy</option>
                  <option value="policy">Policy Change</option>
                  <option value="rights">Rights Awareness</option>
                  <option value="services">Access to Services</option>
                  <option value="education">Education</option>
                  <option value="health">Healthcare</option>
                  <option value="other">Other (please specify)</option>
                </select>
              </div>

              <div>
                <label for="issue" class="block text-sm font-medium text-gray-700">Issue Description</label>
                <textarea
                  name="issue"
                  id="issue"
                  rows="4"
                  required
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  placeholder="Describe the issue you want to address..."
                ></textarea>
              </div>

              <div>
                <label for="objective" class="block text-sm font-medium text-gray-700">Campaign Objective</label>
                <textarea
                  name="objective"
                  id="objective"
                  rows="4"
                  required
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  placeholder="What do you hope to achieve with this campaign?"
                ></textarea>
              </div>

              <div>
                <label for="targetAudience" class="block text-sm font-medium text-gray-700">Target Audience</label>
                <input
                  type="text"
                  name="targetAudience"
                  id="targetAudience"
                  required
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  placeholder="e.g., Policy makers, Local community, General public"
                />
              </div>
            </div>

            {/* Campaign Materials */}
            <div class="space-y-6 pt-6 border-t">
              <h2 class="text-xl font-semibold text-gray-900">Campaign Materials</h2>
              
              <div>
                <label for="materials" class="block text-sm font-medium text-gray-700">
                  Supporting Materials (Optional)
                </label>
                <p class="text-sm text-gray-500 mb-2">
                  Upload any relevant materials such as research documents, campaign proposals, or media files. Maximum file size: 10MB
                </p>
                <input
                  type="file"
                  name="materials"
                  id="materials"
                  multiple
                  accept=".pdf,.doc,.docx,.ppt,.pptx,.jpg,.jpeg,.png,.mp4"
                  class="mt-1 block w-full text-sm text-gray-500
                    file:mr-4 file:py-2 file:px-4
                    file:rounded-md file:border-0
                    file:text-sm file:font-medium
                    file:bg-primary-50 file:text-primary-700
                    hover:file:bg-primary-100"
                />
              </div>
            </div>

            {/* Support Needed */}
            <div class="space-y-6 pt-6 border-t">
              <h2 class="text-xl font-semibold text-gray-900">Support Needed</h2>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Type of Support Required</label>
                <div class="space-y-2">
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input
                        type="checkbox"
                        name="supportNeeded"
                        value="research"
                        class="h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-500"
                      />
                    </div>
                    <div class="ml-3 text-sm">
                      <label class="text-gray-700">Research and Documentation</label>
                    </div>
                  </div>
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input
                        type="checkbox"
                        name="supportNeeded"
                        value="media"
                        class="h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-500"
                      />
                    </div>
                    <div class="ml-3 text-sm">
                      <label class="text-gray-700">Media and Communications</label>
                    </div>
                  </div>
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input
                        type="checkbox"
                        name="supportNeeded"
                        value="networking"
                        class="h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-500"
                      />
                    </div>
                    <div class="ml-3 text-sm">
                      <label class="text-gray-700">Networking and Partnerships</label>
                    </div>
                  </div>
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input
                        type="checkbox"
                        name="supportNeeded"
                        value="resources"
                        class="h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-500"
                      />
                    </div>
                    <div class="ml-3 text-sm">
                      <label class="text-gray-700">Resource Mobilization</label>
                    </div>
                  </div>
                </div>
              </div>

              <div>
                <label for="timeline" class="block text-sm font-medium text-gray-700">Proposed Timeline</label>
                <input
                  type="text"
                  name="timeline"
                  id="timeline"
                  required
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
                  placeholder="e.g., 3 months, 6 months, 1 year"
                />
              </div>
            </div>

            {/* Consent */}
            <div class="space-y-6 pt-6 border-t">
              <h2 class="text-xl font-semibold text-gray-900">Consent</h2>
              
              <div class="space-y-4">
                <div class="flex items-start">
                  <div class="flex items-center h-5">
                    <input
                      type="checkbox"
                      name="consent"
                      id="consent"
                      required
                      class="h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-500"
                    />
                  </div>
                  <div class="ml-3 text-sm">
                    <label for="consent" class="font-medium text-gray-700">Information Consent</label>
                    <p class="text-gray-500">I agree to share this information for the purpose of advocacy campaign planning and implementation.</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="pt-6">
              {/* reCAPTCHA */}
              <div class="mb-6" data-netlify-recaptcha="true"></div>
              
              <button
                type="submit"
                class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
              >
                Submit Campaign Request
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
